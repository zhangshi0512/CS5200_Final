<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CharacterListServlet</servlet-name>
        <servlet-class>pm3.servlet.CharacterListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CharacterListServlet</servlet-name>
        <url-pattern>/characterList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CharacterDetailServlet</servlet-name>
        <servlet-class>pm3.servlet.CharacterDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CharacterDetailServlet</servlet-name>
        <url-pattern>/characterDetail</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>characterList.jsp</welcome-file>
    </welcome-file-list>

</web-app>
